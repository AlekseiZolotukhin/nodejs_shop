<h1>Card</h1>

<div class="cart">
{{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Qty</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      
      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btm-small js-remove"
                  data-id="{{id}}"
                  data-csrf="{{@root.csrf}}"
          >Remove</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Total:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Place order</button>
    </form>
{{else}}
  <p>Card is empty</p>
{{/if}}
</div>
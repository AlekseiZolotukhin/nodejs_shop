<h1>Add new course</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
    <div class="input-field">
        <input id="course-title"
               type="text"
               class="validate"
               name="title"
               value="{{data.title}}"
               required>
        <label for="course-title">Course title</label>
        <span class="helper-text"
              data-error="Input title"
              data-success="alright"></span>
    </div>

    <div class="input-field">
        <input id="course-price"
               type="number"
               class="validate"
               name="price"
               min="1"
               value="{{data.price}}"
               required>
        <label for="course-price">Course price</label>
        <span class="helper-text"
              data-error="Input price"
              data-success="alright"></span>
    </div>

    <div class="input-field">
        <input id="course-img"
               type="text"
               class="validate"
               name="img"
               value="{{data.img}}"
               required>
        <label for="course-img">Course image</label>
        <span class="helper-text" data-error="Add image" data-success="alright"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Add course</button>
</form>
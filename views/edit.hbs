<h1>Edit course: {{course.title}}</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input
                id="course-title"
                type="text"
                class="validate"
                name="title"
                value="{{course.title}}"
                required
        >
        <label for="course-title">Course title</label>
        <span class="helper-text"
              data-error="Input title"
              data-success="alright"
        ></span>
    </div>

    <div class="input-field">
        <input id="course-price"
               type="number"
               class="validate"
               name="price"
               value="{{course.price}}"
               required
               min="1">
        <label for="course-price">Course price</label>
        <span class="helper-text"
              data-error="Input price"
              data-success="alright"></span>
    </div>

    <div class="input-field">
        <input id="course-img"
               type="text"
               class="validate"
               name="img"
               value="{{course.img}}"
               required>
        <label for="course-img">Course image</label>
        <span class="helper-text"
              data-error="Add image"
              data-success="alright"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn btn-primary">Update course</button>

</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn red">Remove course</button>
</form>